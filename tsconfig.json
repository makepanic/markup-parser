{
  "include": [
    "lib/**/*.ts"
  ],
  "sourceMap": true,
  "compilerOptions": {
    "pretty": true,
    "sourceMap": false,
    "declaration": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "module": "commonjs",
    "target": "ES2017",
    "lib": [
      "dom",
      "es2016",
      "es5",
      "es2015.core",
      "es2015.collection",
      "es2016.array.include"
    ]
  }
}
